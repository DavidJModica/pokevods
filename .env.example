# Database Configuration
# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Direct database URL (required for Prisma migrations on Vercel)
DIRECT_URL="postgresql://user:password@host:port/database?schema=public"

# Authentication
# CRITICAL: Set a strong password for admin panel access
# Minimum 12 characters, mix of upper/lower/numbers/symbols
# Example: MyStr0ng!P@ssw0rd
ADMIN_PASSWORD="your-strong-admin-password-here"

# CRITICAL: JWT secret key for token generation
# Generate a secure secret with this command:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This MUST be set - no default value is provided for security
JWT_SECRET="your-secure-64-character-hex-string-here"

# Vercel Blob Storage (for hosted guide images)
# Get this from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# Environment
NODE_ENV="production"

# Optional: Port for local development
PORT=3002
